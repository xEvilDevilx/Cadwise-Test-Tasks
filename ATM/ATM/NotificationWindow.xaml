<Window x:Class="ATM.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM"
        mc:Ignorable="d"
        Title="NotificationWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="_textField" Grid.Row="0" HorizontalAlignment="Center">Info</TextBlock>
        
        <WrapPanel Grid.Row="5" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button IsCancel="True" MinWidth="60">OK</Button>
        </WrapPanel>

    </Grid>
</Window>
